doctype html
html.admin
  head
    meta(charset='utf-8')
    title My portfolio
    meta(content='width=device-width, initial-scale=1' name='viewport')
    link(rel="stylesheet", href="assets/css/main.css")
    script(src='assets/js/foundation.js' defer)
    script(src='assets/js/admin.js' defer)
  body.admin
    .admin-block-area
    .admin-modal
      .admin-modal__text Сообщение отправлено
      button(type="button")#modalBtn.admin-modal__btn.admin-btn Закрыть
    .admin-wrapper
      header.admin-header
        h1.admin-header__title Панель администрирования
        a(href="index.html").admin-header__back Вернуться на сайт
      main.tabs
        input(type="radio", name="tab", id="tab-1", checked)
        label(for="tab-1") Обо мне
        input(type="radio", name="tab", id="tab-2")
        label(for="tab-2") Блог
        input(type="radio", name="tab", id="tab-3")
        label(for="tab-3") Мои работы
        .tabs__content
          .tab
            h2.tab__header Страница «Обо мне»
            form(method="post").skills-form
              .skills-form__section
                h3.tab__header.tab__header--little Frontend
                .skills-form__skill
                  label(for="html").skills-form__label Html
                  input(type="text", id="html", value="#{frontend.html}", required).skills-form__input
                  span %
                .skills-form__skill
                  label(for="css").skills-form__label CSS
                  input(type="text", id="css", value="#{frontend.css}", required).skills-form__input
                  span %
                .skills-form__skill
                  label(for="js").skills-form__label JavaScript
                  input(type="text", id="js", value="#{frontend.js}", required).skills-form__input
                  span %
              .skills-form__section
                h3.tab__header.tab__header--little Workflow
                .skills-form__skill
                  label(for="git").skills-form__label Git
                  input(type="text", id="git", value="#{workflow.git}", required).skills-form__input
                  span %
                .skills-form__skill
                  label(for="gulp").skills-form__label Gulp
                  input(type="text", id="gulp", value="#{workflow.gulp}", required).skills-form__input
                  span %
                .skills-form__skill
                  label(for="bower").skills-form__label Bower
                  input(type="text", id="bower", value="#{workflow.bower}", required).skills-form__input
                  span %
              .skills-form__section
                h3.tab__header.tab__header--little Backend
                .skills-form__skill
                  label(for="php").skills-form__label PHP
                  input(type="text", id="php", value="#{backend.php}", required).skills-form__input
                  span %
                .skills-form__skill
                  label(for="nodejs").skills-form__label Node.js
                  input(type="text", id="nodejs", value="#{backend.nodejs}", required).skills-form__input
                  span %
                .skills-form__skill
                  label(for="mongodb").skills-form__label Mongo.db
                  input(type="text", id="mongodb", value="#{backend.mongodb}", required).skills-form__input
                  span %
              .skills-form__btn
                button(type="button")#skillsBtn.admin-btn Сохранить
          .tab
            h2.tab__header Страница «Блог»
            form(method="post").blog-form
              h3.tab__header.tab__header--little Добавить запись
              input(type="text", placeholder="Название", name="title", required)#postTitle.blog-form__title
              input(type="text", placeholder="Дата", name="date", required)#postDate.blog-form__date
              textarea(placeholder="Содержание", name="text", required)#postText.blog-form__text
              button(type="button")#blogBtn.admin-btn Добавить
          .tab
            h2.tab__header Страница «Мои работы»
            form(action="/work", method="post", enctype="multipart/form-data")#workForm.works-form
              h3.tab__header.tab__header--little Добавить работу
              input(type="text", placeholder="Название проекта", name="workTitle", required).works-form__title
              input(type="text", placeholder="Технологии", name="workTech", required).works-form__tech
              input(type="url", placeholder="Ссылка", name="workLink", required).works-form__link
              input(type="file", id="works-file", name="workFile", required)
              label(for="works-file").works-form__image-btn Загрузить картинку
              button(type="submit")#worksBtn.admin-btn Добавить